/**** Start of imports. If edited, may not auto-convert in the playground. ****/
var tm = ee.ImageCollection("LANDSAT/LT05/C02/T1"),
    msi = ee.ImageCollection("COPERNICUS/S2_HARMONIZED");
/***** End of imports. If edited, may not auto-convert in the playground. *****/
/* Concepto de Resoluci√≥n temporal: Frecuencia por la que pasa el sat√©lite.
 El tiempo de revisita es el n√∫mero de d√≠as entre visitas consecutivas 
 del sat√©lite a la misma ubicaci√≥n en la superficie de la Tierra. Pi√©nsalo como 
 la frecuencia de los p√≠xeles en una serie temporal en una ubicaci√≥n determinada.*/
 
// En este ejercicio revisaremos varios sat√©lites la resoluci√≥n temporal

/* landsat 5 que tiene una frecuencia de cada 16 d√≠as*/
//Usa Print para ver el tiempo de revisita de Landsat
// Define a region of interest as a point at San Francisco airport
var localizacion= ee.Geometry.Point([-122.3774, 37.6194]);
Map.centerObject(localizacion, 16);
print('Landsat-5 series:', tm 
    .filterBounds(Map.getCenter()) 
    .filterDate('1987-06-01', '1987-09-01'));

/*Create a chart(gr√°fico) to see Landsat 5's 16 day revisit time.*/
var tmChart = ui.Chart.image.series({
          imageCollection:tm.select('B4').filterDate('1987-06-01', 
        '1987-09-01'),
        region: localizacion
      }).setSeriesNames(['NIR']);
//Define un estilo de gr√°fico que nos permita ver las fechas individuales

var chartStyle= {
  hAxis :{
    title : 'Date'
  },
  vAxis:{
    title: 'NIR'
  },
  series:{
    0:{
       color: '#00FF00',
       lineWidth:4, // ancho de la linea
       pointSize:8  // tama√±o del punto
    }
  },
};
//Aplica propiedades de estilo personalizadas al gr√°fico.
 tmChart.setOptions(chartStyle);
 // Imprimir gr√°fico. 
print('TM Chart', tmChart); 
/*Cada 16 d√≠as puedes ver:
crecimiento de cultivos,
estr√©s h√≠drico inicial,
recuperaci√≥n despu√©s de lluvias,
p√©rdida o ganancia de cobertura vegetal,
üëâ El NIR sube si la planta est√° sana
üëâ el NIR baja si la planta est√° estresada o sec√°ndose*/
/*hagamos uno con el sentinel-2 tiene un intervalo de cada 5 dias*/
var msiChart = ui.Chart.image.series({
          imageCollection:msi.select('B8').filterDate('2020-06-01', 
        '2020-09-01'),
        region: localizacion
      }).setSeriesNames(['NIR']);
      
 msiChart.setOptions(chartStyle);     
  print('MSI Chart',  msiChart);